{
  "$schema": "https://json.schemastore.org/tsconfig",
  "_version": "20.1.0",
  "extends": "@tsconfig/node20/tsconfig.json",
  "compilerOptions": {
    "lib": [
      "es2023",
      "DOM"
    ],
    "module": "node16",
    "target": "es2022",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node16",
    "outDir": "./dist",
    "moduleDetection": "force",
    "resolveJsonModule": true,
    "allowJs": true,
    "isolatedModules": true
  }
}